# Docker registry (Docker Hub) auth and namespace
DOCKER_USERNAME=your-username
DOCKERHUB_TOKEN=your-dockerhub-token

# Hetzner Cloud (Terraform provider)
HCLOUD_TOKEN=your-hetzner-cloud-api-token

# S3-compatible creds for Terraform backend (AWS/Hetzner Object Storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# SSH key name already uploaded to Hetzner Cloud (used by Terraform)
SSH_KEY_NAME=your-ssh-key-name

# App domain used by Terraform + health check
PRODUCTION_DOMAIN=aipacto.com

# Nomad access (for deploying jobs after infra is applied)
NOMAD_PRODUCTION_ADDR=http://production-server-ip:4646
NOMAD_PRODUCTION_TOKEN=nomad-acl-token
