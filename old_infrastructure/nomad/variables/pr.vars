datacenter     = "pr-${pr_number}"
namespace = "pr-${pr_number}"
environment = "pr"
version = "pr-${pr_number}"
image_tag = "pr-${pr_number}"

# Minimal configuration for PR environments
server_count   = 1
server_cpu     = 200   # 0.2 vCPU
server_memory  = 512   # 512MB

web_count      = 1
web_cpu        = 100   # 0.1 vCPU
web_memory     = 256   # 256MB

# Environment variables
api_url        = "http://pr-${pr_number}.pr.aipacto.com"
log_level      = "debug"
db_password    = "pr-password"
