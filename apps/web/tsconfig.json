{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@aipacto/shared-tsconfig/ui.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~components": ["./src/components/index.ts"],
			"~components/ui": ["./src/components/ui/index.ts"],
			"~lib": ["./src/lib/index.ts"],
			"~hooks": ["./src/hooks/index.ts"],
			"@/*": ["./src/*"]
		},
		"rootDir": "src",
		"outDir": "dist",
		"types": ["vite/client"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "vite-env.d.ts"],
	"references": [
		{
			"path": "../../packages/shared/ui/localization"
		}
		// {
		// 	"path": "../../packages/shared/utils/logging"
		// }
	]
}
