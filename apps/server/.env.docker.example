# Server (local Docker)
NODE_ENV=production
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# CORS for local testing
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:4173

# Auth
BETTER_AUTH_SECRET=change-me-too # Generate with: `openssl rand -base64 32`
# In local Docker, services run over HTTP. Set this to true so cookies are not
# marked Secure (browsers ignore Secure cookies over HTTP). Keep this unset or
# false in real HTTPS deployments.
BETTER_AUTH_INSECURE_COOKIES=true
# Optional: uncomment if you need to test subdomain cookies locally
# BETTER_AUTH_BASE_URL=http://localhost:8080
# BETTER_AUTH_COOKIE_DOMAIN=localhost

# Databases
DATABASE_AUTH_URL=file:./auth.db
DATABASE_AUTH_SECRET=change-me # Generate with: `openssl rand -base64 32`
DATABASE_URL=file:./documents.db
# To test with Turso, override with:
# DATABASE_URL=libsql://<db-name>-<org-name>.turso.io
# DATABASE_TOKEN=your_turso_db_token
