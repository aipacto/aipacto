{
	"extends": "@pacto-chat/shared-tsconfig/base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"noEmit": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@payload-config": ["./src/payload.config.ts"]
		}
	},
	"include": [
		"next-env.d.ts",
		"types.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	]
}
