{
	"name": "@pacto-chat/apps-expo",
	"version": "0.0.1",
	"main": "expo-router/entry",
	"type": "module",
	"scripts": {
		"start": "METRO_VERBOSE=1 yarn turbo build && yarn workspace @pacto-chat/apps-expo prepare && expo start",
		"______ Android ______": "Run and manage Android development",
		"android": "yarn workspace @pacto-chat/apps-expo prepare && expo run:android --device",
		"android:clean": "cd android && ./gradlew clean",
		"______ iOS ______": "Run and manage iOS development",
		"ios": "yarn workspace @pacto-chat/apps-expo prepare && expo run:ios --device",
		"ios:debug": "yarn workspace @pacto-chat/apps-expo prepare && expo run:ios --device --configuration Debug",
		"ios:pods": "npx pod-install",
		"______ Web ______": "Run and manage Web development",
		"web": "METRO_VERBOSE=1 yarn workspace @pacto-chat/apps-expo prepare && expo start --web",
		"______ Prebuild ______": "Prebuild the app",
		"prebuild": "expo prebuild",
		"prebuild:clean": "expo prebuild --clean",
		"prebuild:ios": "expo prebuild --platform ios",
		"______ Build ______": "Build the app",
		"eas:build:dev:android": "cross-env NODE_ENV=development APP_VARIANT=development eas build --profile development --platform android",
		"eas:build:dev:simulator:android": "cross-env NODE_ENV=development APP_VARIANT=development eas build --profile development:simulator --platform android",
		"______ Others ______": "Check if the dependencies, versions are consistent",
		"check": "expo install --check",
		"check:doctor": "npx expo-doctor",
		"check:upgrade": "expo install --fix",
		"clean": "react-native-clean-project",
		"prepare": "node merge_tsconfig.js"
	},
	"dependencies": {
		"@pacto-chat/shared-tsconfig": "workspace:*",
		"@pacto-chat/shared-ui-core": "workspace:*",
		"@pacto-chat/shared-ui-localization": "workspace:*",
		"@pacto-chat/shared-ui-providers": "workspace:*",
		"@react-navigation/devtools": "^7.0.16",
		"@react-navigation/native": "^7.0.0",
		"expo": "~52.0.11",
		"expo-build-properties": "~0.13.2",
		"expo-constants": "~17.0.8",
		"expo-dev-client": "~5.0.14",
		"expo-font": "~13.0.1",
		"expo-linking": "~7.0.3",
		"expo-localization": "~16.0.1",
		"expo-router": "~4.0.9",
		"expo-splash-screen": "~0.29.22",
		"expo-status-bar": "~2.0.0",
		"expo-system-ui": "~4.0.4",
		"expo-web-browser": "~14.0.1",
		"react": "18.3.1",
		"react-native": "0.76.7",
		"react-native-gesture-handler": "~2.20.2",
		"react-native-safe-area-context": "4.12.0",
		"react-native-screens": "~4.4.0",
		"react-native-web": "~0.19.13"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@tamagui/babel-plugin": "^1.121.10",
		"@types/react": "~18.3.12",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"typescript": "^5.3.3"
	}
}
