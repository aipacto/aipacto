{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": ".",
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "composite": false,
    "target": "ES2022",
    "alwaysStrict": true,
    "moduleDetection": "force",
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "isolatedDeclarations": false,
    "isolatedModules": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@pacto-chat/agents-domain": [
        "../../packages/../agents/domain/src"
      ],
      "@pacto-chat/shared-domain": [
        "../../packages/domain/src"
      ],
      "@pacto-chat/shared-utils-env": [
        "../../packages/utils/env/src"
      ],
      "@pacto-chat/shared-utils-env-frontend": [
        "../../packages/utils/env-frontend/src"
      ],
      "@pacto-chat/shared-utils-logging": [
        "../../packages/utils/logging/src"
      ],
      "@pacto-chat/shared-ui-core": [
        "../../packages/ui/core/src"
      ],
      "@pacto-chat/shared-ui-providers": [
        "../../packages/ui/providers/src"
      ],
      "@pacto-chat/shared-ui-core/*": [
        "../../packages/ui/core/src/*"
      ],
      "@pacto-chat/shared-ui-localization": [
        "../../packages/ui/localization/src"
      ]
    },
    "jsx": "react-native",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "plugins": [
      {
        "name": "@nderscore/tamagui-typescript-plugin",
        "pathToApp": "apps/web"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}