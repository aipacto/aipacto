{
	"name": "@aipacto/shared-ui-localization",
	"version": "0.0.1",
	"main": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./paraglide/messages": {
			"types": "./src/paraglide/messages.d.ts",
			"import": "./src/paraglide/messages.js",
			"default": "./src/paraglide/messages.js"
		},
		"./paraglide/runtime": {
			"types": "./src/paraglide/runtime.d.ts",
			"import": "./src/paraglide/runtime.js",
			"default": "./src/paraglide/runtime.js"
		}
	},
	"scripts": {
		"paraglide:compile": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide",
		"build": "npm run paraglide:compile && tsc",
		"check-types": "tsc --noEmit",
		"watch": "tsc --watch --preserveWatchOutput",
		"machine-translate": "inlang machine translate --project project.inlang"
	},
	"peerDependencies": {
		"@aipacto/shared-domain": "workspace:*",
		"react": "19.2.0"
	},
	"devDependencies": {
		"@inlang/cli": "^3.0.0",
		"@inlang/paraglide-js": "^2.4.0"
	}
}
