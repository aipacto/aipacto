{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": ".",
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "importHelpers": true,
    "composite": false,
    "target": "ES2022",
    "alwaysStrict": true,
    "moduleDetection": "force",
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "isolatedDeclarations": false,
    "isolatedModules": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "paths": {
      "@pacto-chat/agents-domain": [
        "../../agents/domain/src"
      ],
      "@pacto-chat/shared-domain": [
        "../domain/src"
      ],
      "@pacto-chat/shared-utils-env": [
        "../utils/env/src"
      ],
      "@pacto-chat/shared-utils-env-frontend": [
        "../utils/env-frontend/src"
      ],
      "@pacto-chat/shared-utils-logging": [
        "../utils/logging/src"
      ],
      "@pacto-chat/shared-ui-core": [
        "../ui/core/src"
      ],
      "@pacto-chat/shared-ui-providers": [
        "../ui/providers/src"
      ],
      "@pacto-chat/shared-ui-core/*": [
        "../ui/core/src/*"
      ],
      "@pacto-chat/shared-ui-localization": [
        "../ui/localization/src"
      ]
    }
  },
  "include": [
    "types.d.ts"
  ]
}
